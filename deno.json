{
  "version": "0.4.0",
  "tasks": {
    "compose": "deno run -A src/cli.ts",
    "dev": "deno run -A --watch=src src/cli.ts",
    "dev:nocheck": "deno run -A --no-check --watch=src src/cli.ts",
    "gen_data": "deno run -A src/generators/gen_data.ts",
    "gen_invoices": "deno run -A src/generators/gen_invoice_data.ts",
    "gen_mvm": "deno run -A src/generators/gen_mvm_data.ts",
    "gen_datasheet": "deno task compose --input ./inp/datasheet.xml --template ./templates/datasheet.html --outDir ./out --mode single --recordPath . --outName datasheet.pdf",
    "gen_chart": "deno run -A src/generators/gen_chart_data.ts && deno task compose --input ./inp/chart_data.xml --template ./templates/chart_demo.html --outDir ./out/charts --mode multi --recordPath Root.Record --outName 'chart_{index}.pdf' --engine browser"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/cli/parse-args": "jsr:@std/cli@^1.0.24/parse-args",
    "@std/fs/ensure-dir": "jsr:@std/fs@^1.0.20/ensure-dir",
    "@std/path": "jsr:@std/path@^1.1.3",
    "fast-xml-parser": "npm:fast-xml-parser@^5.3.2",
    "handlebars": "npm:handlebars@^4.7.8",
    "pdf-lib": "npm:pdf-lib@^1.17.1",
    "puppeteer": "npm:puppeteer@^24.30.0"
  }
}